{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "removeComments": true,
    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@this/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}